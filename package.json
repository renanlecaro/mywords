{
  "private": true,
  "name": "mywords",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "per-env",
    "start:production": "npm run -s serve",
    "start:development": "npm run -s dev",
    "build": "preact build --no-prerender",
    "serve": "preact build && sirv build --cors --single",
    "dev": "preact watch --port 7000",
    "lint": "eslint src",
    "test": "jest",
    "deploy": "npm run build && git commit -am build && git push",
    "pretty": "prettier --write src/**/*.{js,less,json}"
  },
  "devDependencies": {
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "eslint": "^6.0.1",
    "eslint-config-preact": "^1.1.0",
    "husky": "^4.2.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "jest-preset-preact": "^1.0.0",
    "less": "^3.11.1",
    "less-loader": "^5.0.0",
    "per-env": "^1.0.2",
    "preact-cli": "^3.0.0-rc.10",
    "preact-render-spy": "^1.2.1",
    "sirv-cli": "^0.4.5",
    "worker-loader": "^2.0.0",
    "prettier": "^2.0.5"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.12.1",
    "chart.js": "^2.9.3",
    "diff": "^4.0.2",
    "fuse.js": "^3.6.1",
    "js-levenshtein": "^1.1.6",
    "preact": "^10.3.2",
    "preact-chartjs-2": "^1.0.3",
    "preact-compat": "^3.19.0",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1",
    "preact-virtual-list": "^0.3.1",
    "precharts": "^1.4.0"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,less,json,md}": "prettier --write"
  }
}
